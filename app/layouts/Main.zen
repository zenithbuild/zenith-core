<html>
<head>
    <title>Zenith - Phase 3 Components</title>
</head>
<body>
    <script>
type Props = {
  title?: string;
}

state title = props.title || 'My App'
    </script>
    <style>
        * {
            box-sizing: border-box;
        }
        
        body {
            font-family: Arial, sans-serif;
            margin: 0;
            padding: 0;
        }

        .layout-header {
            background: #f0f0f0;
            padding: 16px;
        }

        .layout-footer {
            background: #f0f0f0;
            padding: 16px;
            margin-top: 20px;
        }

        .layout-main {
            min-height: calc(100vh - 120px);
            width: 100%;
        }
        
        /* Hide layout header/footer for pages that have their own full design */
        .full-page ~ .layout-header,
        .full-page ~ .layout-footer {
            display: none;
        }
    </style>

    <header class="layout-header">
        <h1>{ title }</h1>
    </header>

    <main class="layout-main">
        <Slot />
    </main>

    <footer class="layout-footer">Footer content here</footer>
</body>

</html>

